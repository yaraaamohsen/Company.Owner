@model CreateEmployeeDto
@{
    ViewData["Title"] = "Edit";
    var department = new SelectList(ViewData["department"] as IEnumerable<Department>, "Id", "Name");
}

<h1>Edit</h1>

<form asp-action="Edit" enctype="multipart/form-data">

    <partial name="EmployeePartialView/_CreateEditPartialView" />
    <div>
        <label asp-for="DepartmentId" class="col-form-label"></label>
        <select asp-for="DepartmentId" asp-items="department" class="form-control">
            <option value="@null">--Select Department--</option>
        </select>
    </div>
    <input asp-for="ImageName" hidden />

    <div class="my-3">
        <input type="submit" class="btn btn-outline-success" value="Confirm" />
        <a asp-action="Index" class="btn btn-light">Cancel</a>
    </div>
</form>
@section ValidationSection {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}