@model SignUpDto
@{
    ViewData["Title"] = "SignUp";
	Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="container">
	<div class="signup-container text-center">
		@if(!ViewData.ModelState.IsValid)
		{
			<div asp-validation-summary="All" class="m-3 alert alert-danger"></div>
		}
		<form asp-action="SignUp">

			<div class="mb-3">
				<input asp-for="UserName" class="form-control" placeholder="User Name">
				<span asp-validation-for="UserName" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<input asp-for="FirstName" class="form-control" placeholder="First Name">
				<span asp-validation-for="FirstName" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<input asp-for="LastName" class="form-control" placeholder="Last Name">
				<span asp-validation-for="LastName" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<input asp-for="Email" class="form-control" placeholder="Email">
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number"/>
				<span asp-validation-for="PhoneNumber" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<input asp-for="Password" class="form-control" placeholder="Password">
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password">
				<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
			</div>

			<div class="form-check text-start">
				<input asp-for="IsAgree" class="form-check-input" type="checkbox">
				<label asp-for="IsAgree" class="form-check-label">
					I Agree To The Terms & Conditions
				</label>
				<span asp-validation-for="IsAgree" class="text-danger"></span>
			</div>

			<button type="submit" class="btn btn-success w-100 mt-3">SIGN UP</button>

		</form>
		<p class="mt-3">Don’t have an Account? <a asp-action="SignIn" class="fw-bold">Login Now!</a></p>
	</div>
</div>
@section ValidationSection {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
