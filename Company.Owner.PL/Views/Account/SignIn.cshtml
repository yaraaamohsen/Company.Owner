@model SignInDto
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="container">
	<div class="signup-container text-center">
		@if (!ViewData.ModelState.IsValid)
		{
			<div asp-validation-summary="All" class="m-3 alert alert-danger"></div>
		}
		<form asp-action="SignIn">

			<div class="mb-3">
				<input asp-for="Email" class="form-control" placeholder="Email">
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>

			<div class="mb-3 position-relative">
				<input asp-for="Password" class="form-control pe-5" placeholder="Password" type="password" id="passwordInput">
				<span asp-validation-for="Password" class="text-danger"></span>

				<span toggle="#passwordInput"
					  class="fa fa-fw fa-eye field-icon toggle-password position-absolute top-50 end-0 translate-middle-y me-3"
					  style="cursor: pointer;"></span>
			</div>

			<div class="form-check text-start">
				<input asp-for="RemeberMe" class="form-check-input" type="checkbox">
				<label asp-for="RemeberMe" class="form-check-label">
					Remember Me?
				</label>
			</div>

			<button type="submit" class="btn btn-success w-100 mt-3">SIGN IN</button>

		</form>

		@*Sign In With Google*@

