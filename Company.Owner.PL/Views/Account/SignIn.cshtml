@model SignInDto
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="container">
	<div class="signup-container text-center">
		@if (!ViewData.ModelState.IsValid)
		{
			<div asp-validation-summary="All" class="m-3 alert alert-danger"></div>
		}
		<form asp-action="SignIn">

			<div class="mb-3">
				<input asp-for="Email" class="form-control" placeholder="Email">
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<input asp-for="Password" class="form-control" placeholder="Password" type="password">
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>

			<div class="form-check text-start">
				<input asp-for="RemeberMe" class="form-check-input" type="checkbox">
				<label asp-for="RemeberMe" class="form-check-label">
					Remember Me?
				</label>
			</div>

			<button type="submit" class="btn btn-success w-100 mt-3">SIGN IN</button>

		</form>
		<p class="mt-3">Don’t have an Account? <a asp-action="SignUp" class="fw-bold">Sign Up Now!</a></p>
	</div>
</div>

