@using Company.Owner.DAL.Models
@model IEnumerable<Department>

@{
    ViewData["Title"] = "Index";
}

<h1>All Department</h1>

<br />
<br />

<a asp-action="Create" asp-controller="Department" class="btn btn-primary">Create Department</a>

<br />
<br />

@if(Model.Count() > 0){
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Date of Creation</th>
                <th>Details</th>
                <th>update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>@item.CreateAt</td>
                    <td><a class="btn btn-warning" asp-route-id="@item.Id" asp-action="Details">Details</a></td>
                    <td><a class="btn btn-success" asp-route-id="@item.Id" asp-action="Edit">Update</a></td>
                    <td><a class="btn btn-danger" asp-route-id="@item.Id" asp-action="Delete">Delete</a></td>

                </tr>
            }
        </tbody>
    </table>


}else{
    <h4 class="mt-4 alert alert-danger"> There Are No Department :(</h4>
}


