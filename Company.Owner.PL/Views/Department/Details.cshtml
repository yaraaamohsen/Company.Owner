@model DetailsDepartmentDto
@{
    ViewData["Title"] = "Details";
}
    

<h1>Details Page</h1>

<form>
    <div class="my-2">
        <label asp-for="Code" class="col-form-label">Code</label>
        <input disabled asp-for="Code" class="form-control" value="@Model.Code" />
    </div>
    <div class="my-2">
        <label asp-for="Name" class="col-form-label">Name</label>
        <input disabled asp-for="Name" class="form-control" value="@Model.Name" />
    </div>
    <div class="my-2">
        <label asp-for="CreateAt" class="col-form-label">CreateAt</label>
        <input disabled asp-for="CreateAt" class="form-control" value="@Model.CreateAt" />
    </div>

    <div class="my-3">
        <input class="btn btn-primary" value="Edit" />
        <a asp-action="Index" class="btn btn-light">Back To Page</a>
    </div>
</form>


