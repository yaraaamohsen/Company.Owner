@model Department
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Department</h1>

<form asp-action="Edit">
    <div class="my-3">
        <label asp-for="Code" class="col-form-label">Code</label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="my-3">
        <label asp-for="Name" class="col-form-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class ="my-3">
        <label asp-for="CreateAt" class="col-form-label">Date Of Creation</label>
        <input asp-for="CreateAt" class="form-control" />
        <span asp-validation-for="CreateAt" class="text-danger"></span>
    </div>

    <div class="my-3">
        <input type="submit" name="name" value="Confirm" class="btn btn-warning" />
        <a asp-action="Index" class="btn btn-light">Back To Page</a>
    </div>
</form>

